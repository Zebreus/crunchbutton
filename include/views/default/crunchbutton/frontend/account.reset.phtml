<div class="account-reset-container zoom-anim-dialog mfp-hide dialog mfp-hide" ng-controller="AccountResetCtrl">
	<div class="dialog-padding account-modal">
		<div ng-show="reset.step == 1">

			<p>Zeig mir dein Passwort Reset Code:</p>

			<div class="divider spacer-one-onehalf"></div>

			<form class="form">

				<div class="support-form-group form-group">
					<input type="text" maxlength="250" id="account-reset-code" value="" ng-enter="reset.validateCode()" ng-model="reset.form.code" class="form-input form-field"  placeholder="enter the reset code" tabindex="10" />
				</div>

			</form>

			<div class="dialog-message dialog-message-error" ng-repeat="error in reset.errors">
					{{error}}
			</div>

			<div class="divisor"></div>

			<div class="button-pushable">
				<button class="button account-submit lightorange" ng-click="reset.validateCode();">Senden</button>
			</div>

		</div>
		<div ng-show="reset.step == 2">

			<div ng-show="!reset.success">

				<p>Vergib ein neues Passwort</p>

				<form class="form">

					<div class="support-form-group form-group">
						<input type="password" maxlength="250" ng-model="reset.form.password" ng-enter="reset.changePassword()" id="account-reset-password" value="" class="form-input form-field" placeholder="password" tabindex="10" />
					</div>

					<div class="divider"></div>

					<div class="dialog-message dialog-message-error" ng-repeat="error in reset.errors">
						{{error}}
					</div>

				</form>

				<div class="divisor"></div>

				<div class="button-pushable">
					<button class="button account-submit lightorange" ng-click="reset.changePassword();">Ändern</button>
				</div>

			</div>

			<div ng-show="reset.success">

				<div class="dialog-message dialog-message-success">
						Dein Passwort wurde geändert!
				</div>

			</div>

		</div>
	</div>
</div>
